@model Producto
@{
    ViewData["Title"] = "Visualizar Producto";
}


<div>
    <h1 class="display-4">VISUALIZAR PRODUCTOS</h1>

    <form method="post">

        <div class="form-group">
            <label for="exampleInputEmail1">Nombre</label>
            <input asp-for="Nombre" class="form-control" placeholder="Ingrese un nombre">
        </div>

        <div class="form-group">
            <label for="exampleInputEmail1">Descripción</label>
            <input asp-for="Descripcion" class="form-control" placeholder="Ingrese una descripción">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Precio Producto</label>
            <input asp-for="Precio" class="form-control" placeholder="Ingrese Precio del Producto">
        </div>

        <div class="form-group">
            <label for="exampleInputEmail1">Cantidad en Stock</label>
            <input asp-for="CantidadStock" class="form-control" placeholder="Ingrese Cantidad en stock del Producto" >
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Id Proveedor</label>
            <input asp-for="IdProveedor" class="form-control" placeholder="Ingrese el ID del Proovedor">
        </div>

        <div class="form-group">
            <a asp-action="index" class="btn btn-warning">Volver</a>
        </div>

    </form>

</div>
